---
import BackgroundEffect from "../components/BackgroundEffect.astro";
import TypeWriter from "../components/TypeWriter.jsx";
import CV from "/assets/CV.pdf";
---

<BackgroundEffect />

<div class="home" id="Home">
  <img
    class="imgLogo"
    src="https://avatars.githubusercontent.com/u/81378436?v=4"
    alt="Logo"
  />
  <div class="homeSection">
    <section>
      <h1 class="title">
        Hi, I'm <span class="ColorText">Jhon PitMac</span>
      </h1>
      <h3 class="subtitle">
        <span class="colorText idk"><TypeWriter client:load /></span>
      </h3>
      <section class="buttonsSection">
        <a href={CV} class="btn" download="CV"> CV</a>
        <a target="_blank" href="https://github.com/PitMac" class="btn">
          GITHUB
        </a>
      </section>
    </section>
  </div>
</div>

<style>
  .idk > div {
    display: inline;
  }
  .home {
    display: grid;
    grid-template-columns: 1fr 2fr;
    margin: auto;
    width: 80%;
    height: 100vh;
  }

  .homeSection {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .imgLogo {
    align-self: center;
    display: flex;
  }

  .buttonsSection {
    margin-top: 20px;
    display: flex;
    justify-content: center;
  }

  @media (max-width: 1305px) {
    .home {
      grid-template-columns: 1fr;
    }

    @media (max-height: 800px) {
      #Home {
        height: auto;
      }
    }

    .imgLogo {
      padding-top: 30px;
      justify-self: center;
    }
  }

  @media (max-width: 1100px) {
    .ellipse {
      display: none;
    }
    .buttonsSection {
      flex-direction: column;
    }

    .btn {
      width: auto;
      margin-bottom: 10px;
    }
  }

  @media (max-width: 685px) {
    .home {
      grid-template-rows: 1fr 1fr;
    }

    .imgLogo {
      width: 80vw;
    }
  }
</style>
